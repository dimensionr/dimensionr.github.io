	text-transform: uppercase;
	font-size: 11px
	max-width: 200px


//USER
.user
	margin: 10px auto
	opacity: 0.3
	transition: opacity .5s
	-webkit-transition: opacity .5s
	-moz-transition: opacity .5s
	-o-transition: opacity .5s

.user i
	position: absolute;
	top 6px
	left: 4px
	font-size: 14px
	margin: 0 10px
	color color_ico

.details-sm
	font-size: 10px
	text-align: center
	max-width: 186px
	margin:  -5px auto
	// background: color_2
	color: color_2
	border-left 2px solid color_2
	border-bottom 2px solid color_2
	line-height: 20px
	padding:3px 10px

.details-lg
	font-size: 10px
	text-align: center
	max-width: 106px
	margin:  -5px auto
	// background: color_2
	color: color_2
	border-left 2px solid color_2
	border-bottom 2px solid color_2
	line-height: 10px
	padding: 3px 50px


.user:hover
	opacity: 1
	transition: opacity .5s
	-webkit-transition: opacity .5s
	-moz-transition: opacity .5s
	-o-transition: opacity .5s

.user:hover > .btn-border > .btn
	background: color_2
	color black

.btn
	margin: 0 auto
	display: block;
	text-decoration: none
	color color_2
	text-align: center
	// background: color_2
	line-height: 20px
	padding: 3px 50px 3px 50px
	font-weight: bold

.btn-lg
	margin: 0 auto
	display: block;
	text-decoration: none
	color black
	text-align: center
	background: color_2
	line-height: 10px
	padding: 3px 50px 3px 50px
