.news
  height: auto
  text-align: center;
.title
  text-align: left;
  border-bottom: 2px solid rgba(green_1, 0.4)
  margin: 40px 0
  h2
    font-size: 14px
    color: white
    padding: 10px 0
    background: rgba(green_1, 0.2)
    text-align: center;
    border-left: 2px solid rgba(green_1, 0.4)
    border-right: 2px solid rgba(green_1, 0.4)
    border-top: 2px solid rgba(green_1, 0.4)
    width: 180px

.event
  text-decoration: none;
  border: 2px solid rgba(green_1, 0.2)
  padding: 4px
  margin: 10px 5px;
  max-width: 480px
  opacity: 1
  transition: all 1s
  -moz-transition: all 1s
  -webkit-transition: all 1s
  -o-transition: all 1s
  display: inline-block;
  &:hover
    opacity: 1
    transition: all 1s
    -moz-transition: all 1s
    -webkit-transition: all 1s
    -o-transition: all 1s

.descript
  background: rgba(green_1, 0.15)
  margin-top: 5px
  padding: 20px 0
  text-align: justify;
  color: white
  h3
    font-size: 16px
    margin: 40px auto 10px auto;
    color: rgb(254, 230, 100)

.read-more
  background: green_1
  display: block;
  width: 200px
  text-align: center;
  color black
  text-decoration: none
  padding: 5px
  margin: 10px
  &:hover
    background: rgb(118, 235, 173)
.exp
  display: block;
  background: rgb(242, 232, 139)
  text-decoration: none
  padding: 10px
  color: black
  font-weight: bold
  text-transform: uppercase;
  text-align: center;
  margin: 10px
  &:hover
    background: rgb(238, 218, 35)
